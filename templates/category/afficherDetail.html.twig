{% extends 'base.html.twig' %}

{% block title %}Detail d'une categorie{% endblock %}

{% block body %}

<h1 id="title-detail-category">{{category.nameCategory}}</h1>


{% if category.themes | length > 0 %}

    <section id="detail-theme-category">

    {% for theme in category.themes %}
        <a href=" {{ path('afficherDetail_theme', {'id' :theme.id}) }}">{{ theme }} </a><br>
        
        {% endfor %}
        
        
        {% else %}
        <p>Il n'y a aucun theme dans cette categorie </p>
        {% endif %}
        
        <a href="{{ path('add_theme', {'category_id': category.id}) }}" type="button" class="btn btn-success">Ajouter un theme</a><br>
        
    </section>
{% endblock %}