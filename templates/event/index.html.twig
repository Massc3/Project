{% extends 'base.html.twig' %}

{% block title %}Events!{% endblock %}

{% block body %}
    <div class="container">
        <!-- Titre de la page -->
        <h1>Liste des événements</h1>

        <!-- Tableau pour afficher les événements -->
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <!-- Colonne de l'image de l'événement -->
                        <td>
                            {% if event.picture is defined %}
                                <img src="{{ asset('img/' ~ event.picture) }}" alt="{{ event.description }}" class="img-thumbnail">
                            {% else %}
                                <img src="{{ asset('img/parc.jpg') }}" alt="Image par défaut" class="img-thumbnail">
                            {% endif %}
                        </td>
                        <!-- Colonne de la description de l'événement avec lien vers les détails -->
                        <td>
                            <a href="{{ path('afficherDetail_event', {'id': event.id}) }}">{{ event.description }}</a>
                        </td>
                        <!-- Colonne des actions (Modifier et Supprimer) pour chaque événement -->
                        <td>
                            <a href="{{ path('edit_event', {'id': event.id}) }}" class="btn btn-warning">Modifier</a>
                            <a href="{{ path('delete_event', {'id': event.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
